{
    "spec": {
        "databases": [{
            "name": "wave-db",
            "engine": "PG",
            "version": "12",
            "size": "db-s-dev-database",
            "num_nodes": 1
        }],
        "name": "${wave.name}-2",
        "services": [{
            "name": "web",
            "github": {
                "repo": "${wave.repo}",
                "branch": "main",
                "deploy_on_push": true
            },
            "run_command": "heroku-php-apache2 public/",
            "environment_slug": "php",
            "envs": [{
                    "key": "APP_NAME",
                    "value": "Wave",
                    "scope": "RUN_TIME"
                },
                {
                    "key": "APP_ENV",
                    "value": "dev",
                    "scope": "RUN_TIME"
                },
                {
                    "key": "APP_KEY",
                    "value": "base64:UdAH2B63rlotjrkSSsj3Hppy4gbfr+OeHvtSdF9r9q8=",
                    "scope": "RUN_TIME"
                },
                {
                    "key": "APP_DEBUG",
                    "value": "1",
                    "scope": "RUN_TIME"
                },
                {
                    "key": "APP_URL",
                    "value": "${APP_URL}",
                    "scope": "RUN_TIME"
                },
                {
                    "key": "DATABASE_URL",
                    "value": "${wave-db.DATABASE_URL}",
                    "scope": "RUN_TIME"
                },
                {
                    "key": "DB_CONNECTION",
                    "value": "pgsql",
                    "scope": "RUN_TIME"
                },
                {
                    "key": "DB_HOST",
                    "value": "${wave-db.HOSTNAME}",
                    "scope": "RUN_TIME"
                },
                {
                    "key": "DB_PORT",
                    "value": "${wave-db.PORT}",
                    "scope": "RUN_TIME"
                },
                {
                    "key": "DB_DATABASE",
                    "value": "${wave-db.DATABASE}",
                    "scope": "RUN_TIME"
                },
                {
                    "key": "DB_USERNAME",
                    "value": "${wave-db.USERNAME}",
                    "scope": "RUN_TIME"
                },
                {
                    "key": "DB_PASSWORD",
                    "value": "${wave-db.PASSWORD}",
                    "scope": "RUN_TIME"
                }
            ],
            "instance_size_slug": "basic-xs",
            "instance_count": 1,
            "http_port": 8080,
            "routes": [{
                "path": "/"
            }]
        }],
        "jobs": [{
            "name": "migrate",
            "github": {
                "repo": "${wave.repo}",
                "branch": "main",
                "deploy_on_push": true
            },
            "run_command": "php artisan migrate --seed",
            "envs": [{
                    "key": "APP_NAME",
                    "value": "Wave",
                    "scope": "RUN_TIME"
                },
                {
                    "key": "APP_ENV",
                    "value": "dev",
                    "scope": "RUN_TIME"
                },
                {
                    "key": "APP_KEY",
                    "value": "base64:UdAH2B63rlotjrkSSsj3Hppy4gbfr+OeHvtSdF9r9q8=",
                    "scope": "RUN_TIME"
                },
                {
                    "key": "APP_DEBUG",
                    "value": "1",
                    "scope": "RUN_TIME"
                },
                {
                    "key": "APP_URL",
                    "value": "${APP_URL}",
                    "scope": "RUN_TIME"
                },
                {
                    "key": "DATABASE_URL",
                    "value": "${wave-db.DATABASE_URL}",
                    "scope": "RUN_TIME"
                },
                {
                    "key": "DB_CONNECTION",
                    "value": "pgsql",
                    "scope": "RUN_TIME"
                },
                {
                    "key": "DB_HOST",
                    "value": "${wave-db.HOSTNAME}",
                    "scope": "RUN_TIME"
                },
                {
                    "key": "DB_PORT",
                    "value": "${wave-db.PORT}",
                    "scope": "RUN_TIME"
                },
                {
                    "key": "DB_DATABASE",
                    "value": "${wave-db.DATABASE}",
                    "scope": "RUN_TIME"
                },
                {
                    "key": "DB_USERNAME",
                    "value": "${wave-db.USERNAME}",
                    "scope": "RUN_TIME"
                },
                {
                    "key": "DB_PASSWORD",
                    "value": "${wave-db.PASSWORD}",
                    "scope": "RUN_TIME"
                }
            ],
            "kind": "POST_DEPLOY"
        }],
        "region": "ams"
    }
}
